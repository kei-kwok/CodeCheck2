.container {
  background: #fff;
  height: 100vh;
  width: 100%;
}
/* 顶部 */
.color {
  width: 100%;
  height: 300rpx;
  border-radius: 0 0 100rpx 100rpx;
  background-color: rgb(202, 229, 182);
}
.img {
  width: 350rpx;
  height: 250rpx;
  border-radius: 20rpx;
  position: absolute;
  left: 28%;
  top: 100rpx;
}
.name {
  font-size: 16px;
  font-weight: 800;
  width: 200rpx;
  margin: 70rpx auto 40rpx;
}
/* 信息 */
.grey {
  width: 600rpx;
  height: 200rpx;
  border-radius: 10rpx;
  margin: auto;
  background-color: rgb(243, 243, 243);
  position: relative;
  /* justify-content: space-between;
  align-items: center; */
}
.icon {
  width: 50rpx;
  height: 50rpx;
}
.txt-1 {
  /* display: block;
  text-align: center; */
  height: 20px;
  position: absolute;
  top: 14px;
  left: 20px;
}
.txt-2 {
  height: 20px;
  position: absolute;
  top: 45px;
  left: 20px;
}
.txt-3 {
  /* display: inline-block;
  text-align: center; */
  font-size: 13px;
  /* line-height: 20px; */
}
/* 简介 */
.main {
  width: 100%;
  height: 250rpx;
  border-radius: 5px;
  margin-top: 20px;
  box-shadow: 2px 0 5px #cac6c6;
}
.main-txt {
  display: block;
  font-size: 12px;
  font-weight: 700;
  margin-left: 20px;
}
.main-txt-1 {
  display: block;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 10px;
}
/* button */
.btn {
  margin: 30px auto;
  width: 250px;
  height: 40px;
  box-shadow: 0px 5px 12rpx 2rpx rgba(0, 0, 0, 0.14);
  font-size: 15px;
  font-weight: 700;
  line-height: 40px;
  color: rgb(76, 70, 251);
}