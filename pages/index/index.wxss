.banner {
  width: 700rpx;
  height: 312rpx;
  margin: auto;
}

.banner image {
  width: 100%;
  height: 312rpx;
  border-radius: 20rpx;
}

.m-menu {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  width: 700rpx;
  padding-bottom: 24rpx;
  /* padding-top: 30rpx; */
  margin-bottom: 10rpx;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-shadow: 0px 0px 28rpx 1rpx rgba(78, 101, 153, 0.14);
  /* box-shadow:0px 4rpx 6rpx 0rpx  rgb(189, 189, 189); */
}

.m-menu .item {
  width: 175rpx;
  height: 136rpx;
  margin-top: 20rpx;
}

.m-menu image {
  display: block;
  width: 140rpx;
  height: 110rpx;
  border-radius: 30rpx;
  margin: 5rpx auto;
  margin-bottom: 18rpx;
}

.m-menu text {
  display: block;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
}

.a-section {
  width: 700rpx;
  height: auto;
  /* height: 100vh; */
  overflow: hidden;
  background: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
}

.a-section .h {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}

.search {
  height: 100rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.search .input {
  width: 690rpx;
  height: 70rpx;
  border-radius: 40rpx;
  display: flex;
  padding-top: 18rpx;
  padding-left: 20rpx;
  align-items: left;
  vertical-align: middle;
  justify-content: left;
}

.search .icon {
  background: url('data:image/png;base64,') center no-repeat;
  background-size: 100%;
  width: 34rpx;
  height: 34rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  padding-left: 10rpx;
}
/* 瀑布流 */
.pubuBox {
  padding: 22rpx;
  /* background-color: #f7f7f7; */
}

.pubuItem {
  column-count: 2;
  column-gap: 20rpx;
}

.item-masonry {
  box-sizing: border-box;
  border-radius: 15rpx;
  overflow: hidden;
  background-color: #fff;
  break-inside: avoid;
  /*避免在元素内部插入分页符*/
  /* box-sizing: border-box; */
  margin-bottom: 20rpx;
  box-shadow: 0px 0px 18rpx 1rpx rgba(78, 101, 153, 0.14);
}

.item-masonry image {
  width: 100%;
}

